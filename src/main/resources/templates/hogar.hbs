{{#partial "contenido"}}


    {{#if admin}}
    {{> adminNavbar.hbs }}
  {{else}}
    {{#if cliente}}
      {{> clienteNavbar.hbs }}
    {{/if}}
  {{/if}}

    <h1 class="text-center font-weight-bold mb-4">ESTADO DEL HOGAR</h1>       

    <div class="container">

      <div class="row h-100 mb-5">
        <div class="col-md-12">
          <div class="card text-white bg-dark text-center mx-auto">                      
            <div class="card-body">
              <p class="lead">Consumo del Último Mes</p>
              <input type="text" class="form-control text-center" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg"
                value="{{numberFormat consumoUltimoPeriodo "0.0000"}} kWh" readonly>
            </div>
          </div>
        </div>
      </div>
      <div class="row h-100 mb-5 text-center">
        <div class="col-md-6">
          <p class="lead">Estado de Dispositivos</p>
          <table class="table table-striped table-bordered">
            <thead class="thead-dark">
              <tr>
                <th scope="col">DISPOSITIVO</th>
                <th scope="col">CONSUMO KW/H</th>
                <th scope="col">ESTADO</th>          
              </tr>
            </thead>
            <tbody>
              {{#each dispositivos}}
              <tr>
                <td>{{nombre}}</td>
                <td>{{numberFormat kWHora "0.0000"}}</td>
                <td>{{estado}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <div class="col-md-6">
          <p class="lead">Últimas Mediciones</p>
          <table class="table table-striped table-bordered">
            <thead class="thead-dark">
              <tr>
                <th scope="col">DISPOSITIVO</th>
                <th scope="col">ACCION</th>
                <th scope="col">INICIO</th>          
                <th scope="col">FIN</th>
              </tr>
            </thead>
            <tbody>
              {{#each mediciones}}
              <tr>
                <td>{{dispositivo.nombre}}</td>
                <td>{{estado}}</td>
                <td>{{dateTime inicio}}</td>
                <td>{{dateTime fin}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>

{{/partial}}

{{>layout.hbs}}
