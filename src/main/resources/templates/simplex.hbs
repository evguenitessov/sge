{{#partial "contenido"}}


   	{{#if admin}}
		{{> adminNavbar.hbs }}
	{{else}}
		{{#if cliente}}
			{{> clienteNavbar.hbs }}
		{{/if}}
	{{/if}}

    <h1 class="text-center font-weight-bold mb-5">RECOMENDACIÓN DE CONSUMO</h1>       

    <div class="container">

      <p class="lead">
        Se recomienda la siguiente distribución mensual de horas por dispositivo
      </p>

      <table class="table table-striped table-bordered text-center">
        <thead class="thead-dark">
          <tr>            
            <th scope="col">DISPOSITIVO</th>
            <th scope="col">RECOMENDACIÓN</th>          
          </tr>
        </thead>
        <tbody>
          {{#each recomendaciones}}
          <tr>            
            <td>{{@key}}</td>
            <td>{{this}} horas</td>
          </tr>  
          {{/each}} 
        </tbody>
      </table>

    </div>

{{/partial}}

{{>layout.hbs}}
