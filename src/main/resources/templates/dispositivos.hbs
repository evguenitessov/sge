{{#partial "contenido"}}


 	{{#if admin}}
		{{> adminNavbar.hbs }}
	{{else}}
		{{#if cliente}}
			{{> clienteNavbar.hbs }}
		{{/if}}
	{{/if}}

    <div class="container">      
      <div class="row h-100 mb-5">
        <div class="col-md-4">
          <h5 class="text-center font-weight-bold mb-3">CREAR DISPOSITIVO</h5>
          <form action="/dispositivos" method="POST" enctype="application/json">
            <div class="form-group">

            <div class="card text-white bg-dark text-center mx-auto">                      
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nombre</label>
                  <input type="text" name="name" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg"
                    placeholder="Heladera, Computadora..." required>
                </div>
                <div class="form-group">
                  <label for="kwh">Consumo por Hora (KW/H)</label>
                  <input type="number" name="kwh" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg"
                    step=0.0001
                    min=0
                    value=0.0000
                    required>
                </div>
                <div class="form-group">
                  <label for="modul">Funcionamiento</label>
                  <select name="modul" class="custom-select custom-select-lg">
                    {{#each modulos}}
                      <option value="{{@index}}">{{this}}</option>		        
                    {{/each}} 				  
                  </select> 
                </div>
                <div class="form-group">
                  <label for="type">Tipo</label>
                  <select name="type" class="custom-select custom-select-lg">
                    {{#each tipos}}
                      <option value="{{@index}}">{{this}}</option>		        
                    {{/each}} 				  
                  </select>
                </div>
                <button type="submit" class="btn btn-success btn-lg">Crear</button>
              </div>
              </div>          
              
            </div>        
          </form>
        </div>
        <div class="col-md-8">
          <h5 class="text-center font-weight-bold mb-3">DISPOSITIVOS CARGADOS</h5>
          <table class="table table-striped table-bordered text-center">
            <thead class="thead-dark">
              <tr>            
                <th scope="col">NOMBRE</th>
                <th scope="col">KWHORA</th>    
                <th scope="col">MODULO FUNCIONAMIENTO</th>
                <th scope="col">TIPO</th>      
              </tr>
            </thead>
            <tbody>
              {{#each listado}}
              <tr>            
                <td>{{nombre}}</td>
                <td>{{kWHora}}</td>
                <td>{{modulo}}</td>
                <td>{{tipoDispositivo}}</td>
              </tr>  
              {{/each}} 
            </tbody>
          </table>
        </div>
        
      </div>
    </div>
    
{{/partial}}

{{>layout.hbs}}
